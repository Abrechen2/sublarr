<?xml version="1.0"?>
<Container version="2">
  <Name>sublarr</Name>
  <Repository>ghcr.io/denniswittke/sublarr:latest</Repository>
  <Registry>https://ghcr.io/denniswittke/sublarr</Registry>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Support>https://github.com/denniswittke/sublarr/issues</Support>
  <Project>https://github.com/denniswittke/sublarr</Project>
  <Overview>Standalone Subtitle Manager and Translator for Anime/Media. Downloads subtitles from multiple providers (AnimeTosho, Jimaku, OpenSubtitles, SubDL) and translates them using Ollama LLM. Works with Sonarr, Radarr, and Jellyfin.</Overview>
  <Category>MediaApp:Other</Category>
  <WebUI>http://[IP]:[PORT:5765]</WebUI>
  <Icon>https://raw.githubusercontent.com/denniswittke/sublarr/main/logo.svg</Icon>
  <ExtraParams/>
  <DateInstalled/>
  <Description>Standalone Subtitle Manager and Translator for Anime/Media. A Bazarr replacement with integrated LLM translation via Ollama.</Description>
  <Config Name="Web UI Port" Target="5765" Default="5765" Mode="tcp" Description="Web UI Port" Type="Port" Display="always" Required="true" Mask="false">5765</Config>
  <Config Name="Config Path" Target="/config" Default="/mnt/user/appdata/sublarr" Mode="rw" Description="Application config and database" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/sublarr</Config>
  <Config Name="Media Path" Target="/media" Default="/mnt/user/media" Mode="rw" Description="Root media library path" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/media</Config>
  <Config Name="Sonarr URL" Target="SUBLARR_SONARR_URL" Default="http://192.168.178.36:8989" Mode="" Description="Sonarr instance URL" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Sonarr API Key" Target="SUBLARR_SONARR_API_KEY" Default="" Mode="" Description="Sonarr API Key" Type="Variable" Display="always" Required="false" Mask="true"/>
  <Config Name="Radarr URL" Target="SUBLARR_RADARR_URL" Default="http://192.168.178.36:7878" Mode="" Description="Radarr instance URL" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Radarr API Key" Target="SUBLARR_RADARR_API_KEY" Default="" Mode="" Description="Radarr API Key" Type="Variable" Display="always" Required="false" Mask="true"/>
  <Config Name="Ollama URL" Target="SUBLARR_OLLAMA_URL" Default="http://192.168.178.155:11434" Mode="" Description="Ollama LLM server URL" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Ollama Model" Target="SUBLARR_OLLAMA_MODEL" Default="qwen2.5:14b-instruct" Mode="" Description="Ollama model for translation" Type="Variable" Display="always" Required="false" Mask="false">qwen2.5:14b-instruct</Config>
  <Config Name="Target Language" Target="SUBLARR_TARGET_LANGUAGE" Default="de" Mode="" Description="Target subtitle language (ISO 639-1)" Type="Variable" Display="always" Required="false" Mask="false">de</Config>
  <Config Name="Path Mapping" Target="SUBLARR_PATH_MAPPING" Default="" Mode="" Description="Remote=Local path mapping (semicolon-separated)" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="API Key" Target="SUBLARR_API_KEY" Default="" Mode="" Description="Optional API key for authentication" Type="Variable" Display="advanced" Required="false" Mask="true"/>
  <Config Name="Jellyfin URL" Target="SUBLARR_JELLYFIN_URL" Default="" Mode="" Description="Jellyfin URL for library refresh" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Jellyfin API Key" Target="SUBLARR_JELLYFIN_API_KEY" Default="" Mode="" Description="Jellyfin API key" Type="Variable" Display="advanced" Required="false" Mask="true"/>
</Container>
